<Window x:Class="hw7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hw7"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="200">
    <Window.Resources>
        <Style TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Rectangle Grid.Row="0" Height="18" Width="18" Stroke="Gray" Fill="{TemplateBinding Background}" RadiusX="3" RadiusY="3" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="X" Grid.Row="0" Text="X" FontWeight="Bold" Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" Margin="0,0,0,2" Opacity="0"/>
                            <Ellipse x:Name="O" Grid.Row="0" Fill="Gray" Height="8" Width="8" Opacity="0"/>
                            <ContentPresenter Grid.Row="1" Content="{TemplateBinding Content}" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="X" Property="Opacity" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="{x:Null}">
                                <Setter TargetName="O" Property="Opacity" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <UniformGrid Columns="3">
        <CheckBox Content="Check 1" IsChecked="True"/>
        <CheckBox Content="Check 2" IsChecked="False"/>
        <CheckBox Content="Check 3" IsChecked="{x:Null}"/>
    </UniformGrid>
</Window>
