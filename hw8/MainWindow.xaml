<Window x:Class="hw8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hw8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <Window.Resources>
        <DataTemplate x:Key="ProductTemplate">
            <Border x:Name="border" CornerRadius="5" Background="LightBlue">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="{Binding PicturePath}" Grid.Column="0" Margin="3"/>
                    <StackPanel Grid.Column="1">
                        <TextBlock x:Name="NameText" Text="{Binding Name}" FontWeight="Bold" Foreground="Blue"/>
                        <TextBlock Text="{Binding Price, StringFormat={}{0:C}, ConverterCulture=ru-RU}"/>
                    </StackPanel>
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding ProductCategory}">
                    <DataTrigger.Value>
                        <local:Category>food</local:Category>
                    </DataTrigger.Value>
                    <Setter TargetName="border" Property="Background" Value="Bisque"/>
                    <Setter TargetName="NameText" Property="Foreground" Value="Brown"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </Window.Resources>
    <ListBox x:Name="lstProducts" ItemTemplate="{StaticResource ProductTemplate}" HorizontalContentAlignment="Stretch" />
</Window>
