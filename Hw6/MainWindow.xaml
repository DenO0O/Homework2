<Window x:Class="Hw6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hw6"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300">
    <Window.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <StackPanel>
        <TextBox x:Name="Text" Margin="20" />
        <CheckBox x:Name="CB_Visibility" Content="Показать детали" Margin="20,0" IsChecked="True"/>
        <StackPanel Margin="20,5" Visibility="{Binding ElementName=CB_Visibility, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Text="Длина текста: XX"/>
            <ProgressBar Height="18" Margin="0,5" Value ="{Binding Text.Length, ElementName=Text, Mode=OneWay}"/>
        </StackPanel>
    </StackPanel>
</Window>
